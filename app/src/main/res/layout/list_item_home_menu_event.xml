<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_menu_gray_card"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_menu_event_image"
            android:layout_width="250dp"
            android:layout_height="160dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_menu_white_card">

            <TextView
                android:id="@+id/home_menu_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="11dp"
                android:textColor="#ff646464"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_menu_event_catagory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_menu_event_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffa0a0a0"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/home_menu_event_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_menu_event_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:layout_toEndOf="@id/home_menu_event_catagory"
                android:textAlignment="viewEnd"
                android:textColor="#ffa0a0a0"
                android:textSize="15sp" />


        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>