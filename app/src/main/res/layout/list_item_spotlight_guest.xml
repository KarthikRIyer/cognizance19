<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_menu_gray_card"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/spotlight_guest_image"
            android:layout_width="288dp"
            android:layout_height="125dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_menu_white_card">

            <TextView
                android:id="@+id/spotlight_guest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="4dp"
                android:textAlignment="center"
                android:textColor="#ff343434"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spotlight_guest_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spotlight_guest_name"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:textAlignment="center"
                android:textColor="#ff006fcf"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>